{
  "name": "eslint-config-za",
  "version": "2.1.0-alpha.6",
  "description": "ZhongAn's ESLint config",
  "main": "index.js",
  "config": {
    "airbnb": "eslint-config-airbnb@18.0.1"
  },
  "scripts": {
    "sync": "npm install --save $npm_package_config_airbnb && npx install-peerdeps --dev --only-peers $npm_package_config_airbnb",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue  .; exit 0",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZhonganTechENG/eslint-config-za"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "zhongan",
    "airbnb",
    "javascript",
    "typescript",
    "styleguide"
  ],
  "author": "Lin Qun",
  "license": "MIT",
  "homepage": "https://github.com/ZhonganTechENG/eslint-config-za",
  "dependencies": {
    "eslint-config-airbnb": "^18.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "jest": "^24.9.0",
    "jest-runner-eslint": "^0.7.4",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.0.0 || ^6.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0 || ^2.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">= 8"
  },
  "jest": {
    "projects": [
      {
        "displayName": "snapshot",
        "testMatch": ["<rootDir>/test/**/snapshot.test.js"]
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": ["<rootDir>/test/**/rules/*"]
      }
    ]
  },
  
  "jest-runner-eslint": {
    "cliOptions": {
      "ext": [".js", ".jsx", ".ts", ".tsx", ".vue"]
    }
  }
}
